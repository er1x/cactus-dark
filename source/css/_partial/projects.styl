.projects-page {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  &__project {
    width: 45%;
    height: 250px;
    overflow: hidden;
    margin-bottom: 1em;
    position: relative;
    border: 1px solid #f1f1f1;
    background-size: cover;
    .project-data {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.9);
      padding: 1em;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-flow: row wrap;
      opacity: 0;
      a {
        width: 100%;
        font-size 1.2em;
        font-weight: bold;
        text-align: center;
      }
      & p {
        width: 100%;
        text-align: center;
      }
      &:hover {
        opacity: 1;
      }
    }
  }
}

@media (max-width: 600px) {
  .projects-page {
    display: block;
    &__project {
      width: 100%;
    }
  }
}